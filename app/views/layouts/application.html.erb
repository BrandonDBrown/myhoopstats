<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>

          <meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
<%= javascript_include_tag "https://www.google.com/jsapi", "chartkick" %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

  <%= csrf_meta_tags %>
</head>
<body>
    
<!--START OF CUSTOM NAV BAR-->
    
<nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
            
          <div class="navbar-brand"><img src="<%= image_path('logo.png') %>", style="max-width:50px"; /></div>
            
                <div class="navbar-brand"><%= link_to "MyHoopStats", root_path %></div>   
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <% if logged_in? %>
            <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Dashboard", current_user %></li>
            <li><%= link_to "Practice", practice_path(current_user) %></li>
<!--            <li><%= link_to "Game", '#' %></li>-->
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
               <% if current_user.admin %>
                <li><%= link_to "All users", users_path %></li>
                <% else %><% end %>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li><%= link_to "How To", howto_path %></li>
                <li class="divider"></li>
                <li><%= link_to "Log out", logout_path, method: "delete" %></li>
                                </ul>
                </li>
          </ul>
            <% else %>
            
          <ul class="nav navbar-nav navbar-right">

              <li><%= link_to "Sign up", signup_path %></li>
              
              <li><%= link_to "Log in", login_path %></li>
          </ul>
 <% end %>
        </div><!--/.navbar-collapse -->
      </div>
    </nav>
<!--END OF CUSTOM NAV BAR    -->

<!--flash successful signup message start-->
<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>

<!--flash successful signup message end-->

<%= yield %>
    
<!--START OF FOOTER    -->

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<!--<%= debug(params) if Rails.env.development? %>-->
</body>
</html>