<% provide(:title, 'Sign up') %>     
<div class="bg">
</div>

<!--SIGNUP START-->
<div class="container">
    	<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="panel panel-signup">
					<div class="panel-heading">
						<div class="row">
                            <div class="col-xs-12">
								<a href="#" class="active" id="register-form-link"><h1>Sign up</h1></a>
							</div>
						</div>
						<hr>
					</div>
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">

                                    <%= form_for(@user) do |f| %>
                                <%= render 'shared/error_messages' %>
									<div class="form-group">
                                        <%= f.text_field :name, class: 'form-control', placeholder:"Name", tabindex: "1" %>
									</div>
                                    
									<div class="form-group">
                                        <%= f.email_field :email, class: 'form-control', placeholder:"Email Address", tabindex: "1" %>
									</div>
                                    
									<div class="form-group">
                                        <%= f.password_field :password, class: 'form-control', placeholder:"Password", tabindex: "2" %>
									</div>
									<div class="form-group">
<%= f.password_field :password_confirmation, class: 'form-control', placeholder:"Confirm Password", tabindex: "2" %>						
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
                                                <%= f.submit "Sign up", class:"form-control btn btn-register" %>
											</div>
       										</div>
									</div>                                     									<div class="form-group">
										<div class="row">
											<div class="col-lg-12">
												<div class="text-center">
				<p>Already a user? <%= link_to "Login here!", login_path %></p>					
												</div>
											</div>
										</div>
									</div>

                                    <% end %>
                                
								

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>