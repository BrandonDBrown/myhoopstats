<% provide(:title, 'Dashboard') %> 
<div class="background-pic2">
</div>
<!--Gravatar code end-->
<div class="jumbotron">
      <div class="container">
        <div class="row wraps">
          <div class="col-md-3 col-sm-3 col-xs-12">
            <div class="row">
                <div class="col-md-12 wider">
                    <div class="thumbnail dashgrid panel-tabs">
					   <div class="tabs-heading">
                            <div class="col-xs-6">
								<a href="#" class="active" id="overall-link">Overall</a>
							</div>
							<div class="col-xs-6">
								<a href="#" id="recent-link">Recent</a>
							</div>
                        </div>
                    </div>
                </div>
            <div id="overall-form" style="display: block;">
                <div class="col-md-12 wider">
                    <div class="thumbnail dashgrid"> 
                        <div class="col-xs-5 col5">FTA</div>
                        <div class="col-xs-7 col7"><%= @user.practices.sum(:makeft) %>/<%= @user.practices.sum(:totalft) %></div>
                    </div>
                </div>
                <div class="col-md-12 wider">
                    <div class="thumbnail dashgrid">
                        <div class="col-xs-5 col5">FT%</div>
                        <div class="col-xs-7 col7"><%= @user.practices.average(:percentageft).round %>%</div>
                    </div>
                </div>
                <div class="col-md-12 wider">
                    <div class="thumbnail dashgrid">
                        <div class="col-xs-5 col5">FGA</div>
                        <div class="col-xs-7 col7"><%= @user.practices.sum(:makejs) %>/<%= @user.practices.sum(:totaljs) %></div>
                    </div>
                </div>
                <div class="col-md-12 wider">
                    <div class="thumbnail dashgrid">
                        <div class="col-xs-5 col5">FG%</div>
                        <div class="col-xs-7 col7"><%= @user.practices.average(:percentagejs).round %>%</div>
                    </div>
                </div>
            </div>
            <div id="recent-form" style="display: none;">
                <div class="col-md-12 wider">
                    <div class="thumbnail dashgrid">
                        <div class="col-xs-5 col5">FTA</div>
                        <div class="col-xs-7 col7"><%= @user.practices.order("created_at ASC").last.makeft %>/<%= @user.practices.order("created_at ASC").last.totalft %></div>
                    </div>
                </div>
                <div class="col-md-12 wider">
                    <div class="thumbnail dashgrid">
                        <div class="col-xs-5 col5">FT%</div>
                        <div class="col-xs-7 col7"><%= @user.practices.order("created_at ASC").last.percentageft.round %>%</div>
                    </div>
                </div>
                <div class="col-md-12 wider">
                    <div class="thumbnail dashgrid">
                        <div class="col-xs-5 col5">FGA</div>
                        <div class="col-xs-7 col7"><%= @user.practices.order("created_at ASC").last.makejs %>/<%= @user.practices.order("created_at ASC").last.totaljs %></div>
                    </div>
                </div>
                <div class="col-md-12 wider">
                    <div class="thumbnail dashgrid">
                        <div class="col-xs-5 col5">FG%</div>
                        <div class="col-xs-7 col7"><%= @user.practices.order("created_at ASC").last.percentagejs.round %>%</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
        <div class="col-md-9 col-sm-9 col-xs-12">
            <div class="row">
                <div class="col-md-12 graph1">
                <canvas id="buyers" width="600" height="600"></canvas>
            </div>
                </div>
        </div>
    </div>
</div>
</div>

